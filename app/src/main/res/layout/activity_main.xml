<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="296dp"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:text="It is a simple activity for contact get in touch with us"
        android:textColor="#0B0B0B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="337dp"
        android:layout_height="234dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout">

        <Button
            android:id="@+id/button5"
            android:drawableLeft="@drawable/whatsapp_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#349885"
            android:textColor="#F6F5F5"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Click to whatsapp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#26379E"
            android:text="Click to call us(pk)"
            android:textColor="#F6F5F5"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#250A55"
            android:text="Click to call us(usa)"
            android:textColor="#F6F5F5"
            android:textSize="16sp"
            android:textStyle="bold"
           />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#1B6E97"
            android:text="Visit our website"
            android:textColor="#F6F5F5"
            android:textSize="16sp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <Button
        android:id="@+id/button9"

        android:layout_width="414dp"
        android:layout_height="79dp"
        android:background="#3F51B5"
        android:text="CONTACT US"
        android:textColor="#F6F5F5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="296dp"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:text="It is a simple activity for contact get in touch with us"
        android:textColor="#0B0B0B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="341dp"
        android:layout_height="236dp"
        android:layout_marginBottom="92dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/button_style1"
            android:hint="Subject"
            android:textColorHint="#8C8888" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="109dp"

            android:layout_marginTop="10dp"
            android:background="@drawable/button_style1"
            android:hint="Write your message here"
            android:textColorHint="#8C8888" />

        <Button
            android:id="@+id/button10"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="13dp"
            android:background="#681BE4"
            android:text="send" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="132dp"
        android:layout_height="42dp"
        android:text="OR"
        android:textColor="#0C0C0C"
        android:textDirection="locale"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.655"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.45" />

</androidx.constraintlayout.widget.ConstraintLayout>